

<div id="locations_wrapper">

<div id="locations_list_wrapper">
  <h1>Locations</h1>
<table id="locations_list">
  <br/>
  <thead>
    <tr>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.sort_by{|location| location.primary_site_name}.each do |location| %>
      <tr>
        <td><%= link_to location.primary_site_name, location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

